.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", entries_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_entry_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_entry_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Entry
    .inner
      = form_for @entry, :url => entry_path(@entry), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
