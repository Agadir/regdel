%html
  %head
    %title Regdel
    =render(:partial => 'layouts/head')
  %body
    #container
      -unless request.env['USE_HTML_PARTIALS']
        =render(:partial => 'layouts/header') 
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          =render(:partial => 'layouts/footer') unless request.env['USE_HTML_PARTIALS']
        #sidebar
          = yield :sidebar
