%html
  %head
    %title Regdel
    =render(:partial => 'layouts/head') unless Rails.env.demo?
  %body
    #container
      -unless Rails.env.demo?
        =render(:partial => 'layouts/header') 
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          =render(:partial => 'layouts/footer') unless Rails.env.demo?
        #sidebar
          = yield :sidebar
